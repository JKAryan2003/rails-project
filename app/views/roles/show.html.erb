<%= stylesheet_link_tag('show') %>

<div class = "container d-flex justify-content-center align-items-center shadow p-3 mb-5 bg-body-tertiary rounded show_container">
  <p class="h1 text-center mb-5">Role Details</p>

  <div class = "mb-5">
    <span class = "text-center fw-medium fs-4">Role Name : </span> 
    <span class = "fw-light fs-5"><%= @role.role_name%></span>
  </div>
  <div class = "mb-5">
    <span class = "text-center fw-medium fs-4">Description : </span> 
    <span class = "fw-light fs-5"><%= @role.description%></span>
  </div>

  <div class = "mt-3 d-flex justify-content-center ms-2 ">
    <%= link_to "Edit", edit_role_path(@role), class: "btn btn-secondary me-5"%>
    <%= link_to "Back", roles_path , class: "btn btn-danger"%>
  </div>
</div>
 