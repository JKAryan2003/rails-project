<div id="flash" class="flash">
  <% if notice.present? %>
    <div class="alert alert-info py-3 m-5 w-25 rounded-4 text-center">
      <%= notice %>
      <button type="button" class="btn-close mx-3 mb-1" data-bs-dismiss="alert" aria-label="Close" ></button>    </div>
    
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-warning py-3 m-5 w-25 rounded-4 text-center">
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>    </div>
  <% end %>
</div>