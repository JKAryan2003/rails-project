<%= stylesheet_link_tag('index') %>

<div class = "container d-inline-flex justify-content-center align-items-center flex-column">
	<p class="h2 text-center mb-3">Users List</p>
	<%= link_to 'Create User', new_user_path, class: "btn btn-success mb-3" %>

	<div class = "table_div">
		<table class="table table-hover text-center">
			<thead class = "table-secondary">
				<tr>
					<th class = "p-3" >First Name</th>
					<th class = "p-3" >Last Name</th>
					<th class = "p-3" >Email</th>
					<th class = "p-3" >Roles</th>
					<th class = "p-3" colspan = "3">Actions</th>
				</tr>
			</thead>
			<tbody class = "table-light text-center" >
				<% @users.each do |user|%>
					<tr>
						<td class = "p-3" ><%= user.first_name %></td>
						<td class = "p-3"><%= user.last_name %></td>
						<td class = "p-3"><%= user.email %></td>
						<td class = "p-3">
							<% user.roles.each do |role|%>
								<%= role.role_name%>
							<% end%>
						</td>
						<td class = "p-3"><%= link_to "Details", user_path(user), class: "btn btn-dark" %></td>
						<td class = "p-3"><%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary" %></td>
						<td class = "p-3"><%= link_to "Delete",user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you confirm to delete"}, class: "btn btn-danger" %></td>
					</tr>
				<% end%>
			</tbody>
		</table>
	</div>
</div>